{
  "name": "api",
  "version": "1.0.0",
  "description": "NestJS API with tRPC, Drizzle ORM, and Better Auth",
  "main": "dist/main.js",
  "scripts": {
    "build": "bun --bun nest build",
    "compile": "bun run build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "dev": "bun run start:dev",
    "start": "bun --bun nest start --preserveWatchOutput",
    "start:dev": "bun --bun nest start --watch --preserveWatchOutput",
    "start:debug": "bun --bun nest start --debug --watch --preserveWatchOutput",
    "start:prod": "bun --bun dist/main",
    "clean": "rimraf dist",
    "typecheck": "tsc --noEmit",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "db:migrate": "drizzle-kit migrate",
    "db:seed": "bun --bun src/core/modules/db/drizzle/seed.ts",
    "db:push": "drizzle-kit push",
    "db:reset": "drizzle-kit reset",
    "db:generate": "drizzle-kit generate",
    "db:studio": "drizzle-kit studio",
    "auth:generate": "npx @better-auth/cli generate --config src/auth.ts --output src/core/modules/db/drizzle/schema/auth.ts --y && bun run db:generate"
  },
  "dependencies": {
    "@mguay/nestjs-better-auth": "catalog:auth",
    "@nestjs/bull": "^11.0.3",
    "@nestjs/common": "catalog:api:nest",
    "@nestjs/core": "catalog:api:nest",
    "@nestjs/platform-express": "catalog:api:nest",
    "@nestjs/platform-socket.io": "^11.1.6",
    "@nestjs/schedule": "^6.0.0",
    "@nestjs/websockets": "^11.1.6",
    "@octokit/rest": "^20.0.2",
    "@orpc/client": "catalog:orpc",
    "@orpc/contract": "catalog:orpc",
    "@orpc/nest": "catalog:orpc",
    "@orpc/openapi": "catalog:orpc",
    "@orpc/server": "catalog:orpc",
    "@orpc/shared": "catalog:orpc",
    "@repo/api-contracts": "*",
    "@repo/types": "*",
    "@types/mime-types": "^3.0.1",
    "@types/node-forge": "^1.3.14",
    "@vitest/coverage-istanbul": "^3.2.4",
    "axios": "^1.11.0",
    "bcrypt": "catalog:database",
    "better-auth": "catalog:auth",
    "bull": "^4.16.5",
    "dockerode": "^4.0.7",
    "drizzle-kit": "catalog:database",
    "drizzle-orm": "catalog:database",
    "express-list-routes": "^1.3.1",
    "js-yaml": "^4.1.0",
    "mime-types": "^3.0.1",
    "multer": "^1.4.5-lts.1",
    "nanoid": "catalog:database",
    "node-forge": "^1.3.1",
    "pg": "^8.16.3",
    "reflect-metadata": "catalog:api:nest",
    "rxjs": "catalog:api:nest",
    "simple-git": "^3.21.0",
    "socket.io": "^4.8.1",
    "tar": "^7.4.3",
    "tar-stream": "^3.1.7",
    "yauzl": "^3.2.0",
    "zod": "catalog:utils"
  },
  "devDependencies": {
    "@nestjs/cli": "catalog:api:nest",
    "@nestjs/schematics": "catalog:api:nest",
    "@nestjs/testing": "catalog:api:nest",
    "@repo/eslint-config": "*",
    "@repo/prettier-config": "*",
    "@repo/tsconfig": "*",
    "@repo/vitest-config": "*",
    "@types/bcrypt": "catalog:database",
    "@types/bull": "^4.10.0",
    "@types/dockerode": "^3.3.43",
    "@types/express": "^4.17.17",
    "@types/js-yaml": "^4.0.9",
    "@types/multer": "^1.4.12",
    "@types/node": "^20.3.1",
    "@types/tar": "^6.1.13",
    "@types/tar-stream": "^3.1.3",
    "@types/yauzl": "^2.10.3",
    "source-map-support": "^0.5.21",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "4.2.0",
    "tsx": "^4.16.2",
    "typescript": "catalog:build",
    "vitest": "catalog:testing"
  },
  "keywords": [],
  "author": "",
  "license": "ISC"
}
