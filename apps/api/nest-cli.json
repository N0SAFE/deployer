{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "monorepo": true,
  "compilerOptions": {
    "deleteOutDir": false,
    "builder": "swc",
    "typeCheck": true,
    "webpack": true,
    "webpackConfigPath": "webpack.config.js"
  },
  "projects": {
    "api": {
      "type": "application",
      "entryFile": "main",
      "sourceRoot": "src"
    },
    "api-contracts": {
      "type": "library",
      "root": "../../packages/api-contracts",
      "entryFile": "index",
      "sourceRoot": "../../packages/api-contracts/src",
      "compilerOptions": {
        "tsConfigPath": "../../packages/api-contracts/tsconfig.json"
      }
    }
  }
}